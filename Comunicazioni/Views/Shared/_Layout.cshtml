<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Comunicazioni</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Comunicazioni.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Comunicazioni</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

			<div class="d-flex justify-content-between align-items-center flex-wrap">
				<div>
					<a href="#"><img src="~/css/resources/logo.png" height="50px"></a>
				</div>

				<div>
					<p class="fs-4 text-white m-0 fst-italic">"Fatti non foste a viver come bruti"</p>
				</div>
			</div>
		</div>
	</div>
	<header>
		<div class="sticky-top">
			<nav class="navbar navbar-expand-lg navbar-custom">

				<div class="container">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Home</a>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Offerta Formativa
								</a>
								<ul class="dropdown-menu">

									<li class="dropdown">
										<a class="dropdown-item dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
											Piano di studi
										</a>
										<ul class="dropdown-menu dropdown-submenu">
											<li><a class="dropdown-item" href="#">Programma</a></li>
											<li><a class="dropdown-item" href="#">Esami e docenti</a></li>
										</ul>
									</li>
								</ul>
							</li>
							@{
								var ruolo = Context.Session.GetString("Ruolo");
							}
							@if (ruolo != null)
							//solo se qualcuno ha fatto accesso apparirà la dorpdownlist
							{
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Comunicazioni
									</a>
									<ul class="dropdown-menu">
										<li>
											<a class="dropdown-item" asp-area="" asp-controller="Comunicazioni" asp-action="List">Comunicazioni</a>
										</li>

										<li class="nav-item">
											<a class="dropdown-item" asp-area="" asp-controller="Comunicazioni" asp-action="Add"> Inserisci una nuova Comunicazione</a>
										</li>
									</ul>
								</li>
							}

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Offerta Formativa
								</a>
								<ul class="dropdown-menu">
									<li><a class="dropdown-item" href="#">Calendario Accademico</a></li>
									<li><a class="dropdown-item" href="#">Sedute di laurea</a></li>
								</ul>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Contatti</a>
							</li>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Come Funziona</a>
							</li>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">FAQ</a>
							</li>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Privacy</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer>
		<div class="bg-dark text-white h-100">
			<div class="container d-flex justify-content-between align-items-end flex-wrap">
				<div>
					<img src="https://italy.generation.org/wp-content/uploads/2019/05/Generation_Italy_logo_WHITE.svg" alt="Logo UNIGen" class="img-fluid my-3" width="150px">
					<p class="fs-4 ms-4 mb-0">Università UNIGen</p>
					<p class="fs-6">Milano, Milano, MI 20100, IT</p>
				</div>
				<div>
					<p class="fs-6">© 2024 Generation: You Employed, Inc.</p>
				</div>
				<div>
					<p class="fs-5 mb-1">Chi Siamo</p>
					<ul class="list-unstyled ms-3">
						<li><a href="#" class="text-white">Contatti</a></li>
						<li><a href="#" class="text-white">Come Funziona</a></li>
						<li><a href="#" class="text-white">FAQ</a></li>
						<li><a href="#" class="text-white">Privacy</a></li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
