<h1>Login</h1>
<form method="post">
	<div class="mt-3">
		<label class="form-label">Username</label>
		<input type="text" class="form-control" name="usr" maxlength="50" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Password</label>
		<input type="password" class="form-control" name="pwd" maxlength="50" required />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Login</button>
	</div>
	<div class="mt-3">
		<label class="form-label">Ruolo</label>
		<select class="form-select" id="lista" name="ruolo">
			<option value="1">Amministrazione</option>
			<option value="2">Docente</option>
			<option value="3">Studente</option>
		</select>
	</div>
</form>
@if (!ViewData.ModelState.IsValid)
{
	<script>
		alert("Username o password errati.");
	</script>
}

