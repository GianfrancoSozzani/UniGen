@*INSERIMENTO FORM*@

@model Comunicazioni.Models.AddComunicazioneViewModel



<h1>Nuova Comunicazione</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Data e Ora</label>
        <input type="datetime-local" asp-for="DataOraComunicazione" class="form-control" />
        <span asp-validation-for="DataOraComunicazione" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Titolo: </label>
        <input type="text" class="form-control" maxlength="100" />
    </div>

    <div class="mt-3">
        <label class="form-label">Testo: </label>
        <textarea asp-for="Testo" class="form-control" rows="4" maxlength="500"></textarea>
        <span asp-validation-for="Testo" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Esame: </label>
        <select asp-for="K_Esame" asp-items="@ViewBag.EsamiList" class="form-select">
            <option disabled selected>-- Seleziona un esame --</option>
        </select>
        <span asp-validation-for="K_Esame" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Inserisci Comunicazione</button>
    </div>
</form>


