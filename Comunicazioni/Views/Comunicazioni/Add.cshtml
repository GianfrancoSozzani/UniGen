@model UniGen.Models.AddComunicazioneViewModel

@{
    ViewData["Title"] = "Nuova Comunicazione";
}

<h1>Nuova Comunicazione</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Data e Ora</label>
        <input type="datetime-local" asp-for="DataOraComunicazione" class="form-control" />
        <span asp-validation-for="DataOraComunicazione" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Soggetto</label>
        <input type="text" asp-for="Soggetto" class="form-control" maxlength="100" />
        <span asp-validation-for="Soggetto" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Testo</label>
        <textarea asp-for="Testo" class="form-control" rows="4" maxlength="500"></textarea>
        <span asp-validation-for="Testo" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Studente</label>
        <select asp-for="K_Studente" asp-items="ViewBag.StudentiList" class="form-select">
            <option disabled selected>-- Seleziona uno studente --</option>
        </select>
        <span asp-validation-for="K_Studente" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Docente</label>
        <select asp-for="K_Docente" asp-items="ViewBag.DocentiList" class="form-select">
            <option disabled selected>-- Seleziona un docente --</option>
        </select>
        <span asp-validation-for="K_Docente" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Salva Comunicazione</button>
    </div>
</form>


