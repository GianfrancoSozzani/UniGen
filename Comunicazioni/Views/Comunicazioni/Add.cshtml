@model Comunicazioni.Models.AddComunicazioneViewModel

<h1>Nuovo studente</h1>
<form method="post">
	<div class="mt-3">
		<label class="form-label">Esame</label>
		<select class="form-select" asp-for="K_Esame" asp-items="@ViewBag.EsamiList">
			<option disabled selected>--Selezionare una Facoltà</option>
		</select>
	</div>
	<div class="mt-3">
		<label class="form-label">Titolo</label>
		<input type="text" class="form-control" maxlength="50" required />
	</div>
	<div class="mt-3">
		<label class="form-label">Contenuto</label>
		<input type="text" class="form-control" asp-for="Testo" maxlength="50" required />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Invia</button>
	</div>
</form>
