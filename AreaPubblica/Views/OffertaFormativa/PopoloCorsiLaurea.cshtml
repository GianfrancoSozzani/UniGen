@{
}

@model List<AreaPubblica.Models.Entities.Corso>

<h1>Ecco le nostre</h1>
<table class="table">
	<thead>
		<tr>
			<th>
				Corso
			</th>
			<th>
				Facoltà
			</th>
			<th>
				Durata
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach ( var corso in Model)
		{
			<tr>
				<td>
					@corso.TitoloCorso
				</td>
				<td>
					@corso.Facolta
				</td>
				<td>
					@corso.TipoCorso
				</td>
			</tr>
		}
		
	</tbody>
</table>