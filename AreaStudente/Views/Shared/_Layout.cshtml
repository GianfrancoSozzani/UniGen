<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AreaStudente</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AreaStudente.styles.css" asp-append-version="true" />

	<style>
		.navbar-custom {
			background-color: #12304F;
		}

			.navbar-custom .nav-link,
			.navbar-custom .navbar-brand {
				color: white !important;
			}

		.dropdown-menu > li:hover > .dropdown-submenu {
			display: block;
		}

		.sticky-top {
			z-index: 1030 !important; /* Bootstrap usa 1000 per i dropdown, 1050+ per i modal. 1030 è un valore comune per le navbar fixed/sticky */
		}
	</style>

</head>
<body>
	<div class="bg-black pb-1">
		<div class="d-flex flex-column">
			<div class="d-flex justify-content-between align-items-center flex-wrap mx-3">
				<div>
					<a href="#"><img src="/resources/logo.png" height="50px"></a>
				</div>

				<div>
					<p class="fs-4 text-white m-0">Fatti non foste a viver come bruti</p>
				</div>
			</div>
		</div>
	</div>
	<header>
		<div class="sticky-top">
			<nav class="navbar navbar-expand-lg navbar-custom">
				<div class="mx-3">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" asp-area="" asp-controller="Studenti" asp-action="Show">Il mio Profilo</a>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Gestione Profilo
								</a>
								<ul class="dropdown-menu">

									<li class="dropdown">
										<a class="dropdown-item" asp-area="" asp-controller="" asp-action="">
											Modifica Dati
										</a>
									</li>
								</ul>
							</li>

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Immatricolazione
								</a>
								<ul class="dropdown-menu">
									<li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Invia Documenti</a></li>
								</ul>
							</li>


							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">FAQ</a>
							</li>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Contatta la Struttura</a>
							</li>

							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">Privacy</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
	</header>

	@* <div class="container"> *@
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	@* </div> *@

	<footer>
		<div class="bg-dark text-white h-100">
			<div class="container d-flex justify-content-between align-items-end flex-wrap">
				<div>
					<img src="https://italy.generation.org/wp-content/uploads/2019/05/Generation_Italy_logo_WHITE.svg" alt="Logo UNIGen" class="img-fluid my-3" width="150px">
					<p class="fs-4 ms-4 mb-0">Università UNIGen</p>
					<p class="fs-6">Milano, Milano, MI 20100, IT</p>
				</div>
				<div>
					<p class="fs-6">© 2024 Generation: You Employed, Inc.</p>
				</div>
				<div>
					<p class="fs-5 mb-1">Chi Siamo</p>
					<ul class="list-unstyled ms-3">
						<li><a href="#" class="text-white">Contatti</a></li>
						<li><a href="#" class="text-white">Come Funziona</a></li>
						<li><a href="#" class="text-white">FAQ</a></li>
						<li><a href="#" class="text-white">Privacy</a></li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
