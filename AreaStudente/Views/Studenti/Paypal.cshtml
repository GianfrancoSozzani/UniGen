<h2>Pagamento con PayPal (SANDBOX)</h2><div id="paypal-button-container"></div><script src="https://www.paypal.com/sdk/js?client-id=AYA4YmJkl1n2mNkdcWH2mFallaQv15CdYhWyOUDdVR2f5RSWIMaa0Iysntwc83X7ipSkyPQshhkQoFbD&currency=EUR"></script><script>    paypal.Buttons({        createOrder: function (data, actions) {            return actions.order.create({                purchase_units: [{                    amount: {                        value: @Model.Importo // Importo da pagare                    }                }]            });        },        onApprove: function (data, actions) {            return actions.order.capture().then(function (details) {                alert('Pagamento effettuato da: ' + details.payer.name.given_name);                window.location.href = '@Url.Action("SuccessoPagamento", "Home")';            });        },        onCancel: function (data) {            alert('Pagamento annullato');            window.location.href = '@Url.Action("Annullato", "Home")';        }    }).render('#paypal-button-container');</script>public ActionResult IniziaPagamento() {     decimal importo = 100;// recupera importo dal db o sessione     return RedirectToAction("Checkout", new { amount = importo}); }