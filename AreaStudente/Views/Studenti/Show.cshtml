@model AreaStudente.Models.ShowStudenteViewModel

<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<link href="~/css/show.css" rel="stylesheet" />


<div class="main-content">
    <!-- Header -->
    <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url('/resources/studenti-universitari.jpg'); background-size: cover; background-position: center top;">
        <!-- Mask -->
        <span class="mask bg-gradient-default opacity-8"></span>
        <!-- Header container -->
        <div class="container-fluid d-flex align-items-center">
            <div class="row">
                <div class="col-lg-7 col-md-10">
                    @* Mostra il nome solo se il modello non è null/vuoto *@
                    <h1 class="display-2 text-white">Benvenuto/a @* @(Model?.Nome) *@!</h1>
                    <p class="text-white mt-0 mb-5">'Quest'area personale permette di consultare e modificare i dati della tua registrazione, procedere all'immatricolazione e conttatare l'università per ottenere informazioni.'</p>
                   @*  @if (ViewBag.Message != null)
                    {
                        <p class="text-warning">@ViewBag.Message</p>
                    } *@
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
        @* Mostra il contenuto solo se il modello ha dati validi (es. ID > 0) *@
        @*  @if (Model != null && Model.K_Studente != Guid.Empty && ViewBag.ErrorMessage == null)
        { *@
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a href="#">
                                        <img src="https://demos.creative-tim.com/argon-dashboard/assets-old/img/theme/team-4.jpg" class="rounded-circle"> @* Immagine statica, potresti renderla dinamica *@
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="p-4">
                        </div>
                        <div class="card-body pt-0 pt-md-4">
                            <div class="p-5">
                            </div>
                            <div class="text-center">
                                <h3>
                                   Yuliya Stepanyuk @* @Model.Nome @Model.Cognome *@ @* Mostra Nome e Cognome *@
                                </h3>
                                <div>
                                    <i class="ni education_hat mr-2"></i>Università UniGen
                                </div>
                                <hr class="my-4">
                                <p>Vai alla tua Area Lavoro</p>
                                <a href="#">Area Lavoro</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--User -->
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-body">
                            <form>
                                @* Nota: questo form non ha action/method, è solo per display *@
                                <h6 class="heading-small text-muted mb-4">Informazioni Personali</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-first-name">Nome</label>
                                                <input type="text" id="input-first-name" class="form-control form-control-alternative" placeholder="Nome" value="@* @Model.Nome *@" readonly>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-last-name">Cognome</label>
                                                <input type="text" id="input-last-name" class="form-control form-control-alternative" placeholder="Cognome" value="@* @Model.Cognome *@" readonly>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-email">Indirizzo Email</label>
                                                <input type="email" id="input-email" class="form-control form-control-alternative" placeholder="unigen@esempio.com" value="@* @Model.Email *@" readonly>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-date">Data di Nascita</label>
                                                @* Formatta la data come dd/MM/yyyy *@
                                                <input type="text" id="input-date" class="form-control form-control-alternative" placeholder="Data di Nascita" value="@* @Model.DataNascita.ToString("dd/MM/yyyy") *@" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4">
                                <!-- Address -->
                                <h6 class="heading-small text-muted mb-4">Informazioni di Contatto</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-8">
                                            @* Aumentato lo spazio per l'indirizzo *@
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-address">Indirizzo</label>
                                                <input id="input-address" class="form-control form-control-alternative" placeholder="Indirizzo domicilio" value="@* @Model.Indirizzo *@" type="text" readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @* Ridotto spazio CAP *@
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-postal-code">CAP</label>
                                                @* Cambiato type a text per sicurezza (es. CAP esteri) *@
                                                <input type="text" id="input-postal-code" class="form-control form-control-alternative" placeholder="CAP" value="@* @Model.CAP *@" readonly>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            @* Aumentato spazio città *@
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-city">Città</label>
                                                <input type="text" id="input-city" class="form-control form-control-alternative" placeholder="Città" value="@* @Model.Citta *@" readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            @* Aumentato spazio provincia *@
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-country">Provincia</label>
                                                <input type="text" id="input-country" class="form-control form-control-alternative" placeholder="Provincia" value="@* @Model.Provincia *@" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4">
                                <!-- Description -->
                                <h6 class="heading-small text-muted mb-4">Informazioni di Immatricolazione</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-matriculation-number">Matricola</label>
                                                @* Cambiato type a text per sicurezza *@
                                                <input id="input-matriculation-number" class="form-control form-control-alternative" placeholder="Numero Matricola" value="@* @Model.Matricola *@" type="text" readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-date-matriculation">Data di Immatricolazione</label>
                                                @* Formatta la data *@
                                                <input id="input-date-matriculation" class="form-control form-control-alternative" placeholder="Data di Immatricolazione" value="@* @Model.DataImmatricolazione.ToString("dd/MM/yyyy") *@" type="text" readonly>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-enabled">Abilitato</label>
                                                @* Mostra "Sì" o "No" invece di True/False *@
                                                <input id="input-enabled" class="form-control form-control-alternative" placeholder="Abilitato" value="@* @(Model.Abilitato ? "Sì" : "No") *@" type="text" readonly>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-course">Corso</label>
                                                <input id="input-course" class="form-control form-control-alternative" placeholder="Corso" value="@* @Model.Corso *@" type="text" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
       @*  } *@ @* Fine del blocco @if (Model != null && Model.Id > 0) *@
       @*  else if (ViewBag.Message == null) // Mostra un messaggio se non c'è un modello valido E non c'è già un messaggio da ViewBag
        {
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card bg-secondary shadow">
                        <div class="card-body text-center">
                            <p>Nessun dato studente da visualizzare. Assicurati di aver specificato un ID valido.</p>
                        </div>
                    </div>
                </div>
            </div>
        }*@

    </div>
</div> 