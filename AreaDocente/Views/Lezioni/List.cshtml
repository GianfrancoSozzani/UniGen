@model List<AreaDocente.Models.Entities.MVCLezioni>

<style>
    .th {
        display: none;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Elenco Lezioni</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="th">K</th>
                <th>Lezioni</th>
                <th>Video</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lezioni in Model)
            {
                <tr>
                    <td class="th">@lezioni.K_Lezione</td>
                    <td>@lezioni.Titolo</td>
                    <td>@lezioni.Video</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Lezioni" asp-action="Edit" asp-route-id="@lezioni.K_Lezione">Modifica</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["AlertMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'Operazione riuscita',
                    text: '@TempData["AlertMessage"]'
                });
            </script>
        }
    }
</div>
