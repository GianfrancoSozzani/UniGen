@model List<AreaDocente.Models.Entities.MVCLezioni>

<style>
	}
</style>

<h1>Elenco lezioni</h1>

@* TABELLA *@
<table>

	@* HEAD *@
	<thead>
		<tr>
			<th class="th">K</th>
			<th>Lezioni</th>
			<td>Video</td>
			<td></td>
		</tr>
	</thead>

	@* BODY *@
	<tbody>
		@foreach (var lezioni in Model)
		{
			<tr>
				<td class="th">
					@lezioni.K_Lezione
				</td>
			</tr>
			<tr>
				<td>
					@lezioni.Titolo
				</td>
			</tr>
			<tr>
				<td>
					@lezioni.Video
				</td>
			</tr>
			<tr>
				<td>
					<a class="btn btn-primary" asp-controller="Lezione" asp-action="Edit" asp-route-id="@lezioni.K_Lezione">Modifica</a>
				</td>
			</tr>
		}
	</tbody>
</table>

@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	@if (TempData["AlertMessage"] != null)
	{
		<script>
			Swal.fire({
				icon: 'success',
				title: 'Operazione riuscita',
				text: '@TempData["AlertMessage"]'
			});
		</script>
	}
}
