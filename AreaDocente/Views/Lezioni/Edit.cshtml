@model AreaDocente.Models.Entities.MVCLezioni

<h1>Modifica lezione</h1>

@if (Model is null)
{
	<h1>Nessun record trovato con questo ID</h1>
}
else
{
	<form method="post">

		@* K_LEZIONE *@
		<div class="mt-3 d-none">
			<label class="form-label">K</label>
			<input type="text" class="form-control" asp-for="K_Lezione" readonly />
		</div>

		@* TITOLO *@
		<div class="mt-3">
			<label class="form-label">Titolo</label>
			<input type="text" class="form-control" asp-for="Titolo" />
		</div>

		@* VIDEO *@
		<div class="mt-3">
			<label class="form-label">Video</label>
			<input type="text" class="form-control" asp-for="Video" />
		</div>

		@* BTN MODIFICA E ELIMINA *@
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Modifica</button>
			<button type="submit" class="btn btn-danger ms-3" asp-controller="Lezioni" asp-action="Delete">Elimina</button>
		</div>

	</form>
}

@* JS *@
@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	@if (TempData["ErrorMessage"] != null)
	{
		<script>
			Swal.fire({
				icon: 'error',
				title: 'Operazione non riuscita',
				text: '@TempData["ErrorMessage"]'
			});
		</script>
	}
}