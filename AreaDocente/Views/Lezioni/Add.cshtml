@model AreaDocente.Models.AddLezioniViewModel

<div class="container my-5">
    <h1 class="mb-4">Inserimento Lezione</h1>

    <div class="card shadow-sm p-4">
        <form method="post" class="needs-validation" novalidate>

            <div class="mb-3">
                <label class="form-label fw-semibold">Esame</label>
                <select asp-for="K_Esame" asp-items="@ViewBag.EsamiDDl" class="form-select" required>
                    <option disabled selected value="">== Seleziona un esame ==</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Titolo lezione</label>
                <input type="text" class="form-control" asp-for="Titolo" placeholder="Inserisci il titolo della lezione" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Link video</label>
                <input type="text" class="form-control" asp-for="Video" placeholder="Inserisci il link del video" required />
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="bi bi-save me-1"></i> Salva
            </button>
        </form>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Operazione non riuscita',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }
    }
</div>
