@model AreaDocente.Models.AddLezioniViewModel

<div class="container mt-5">
    <h1 class="text-center mb-4">Inserimento Nuova Lezione</h1>

    <div class="card p-4 shadow-sm">
        <form method="post">


            <div class="mt-3">
                <label class="form-label">Esami</label>
                <select asp-for="K_Esame" asp-items="@ViewBag.EsamiDDl" class="form-select" placeholder="Inserisci il titolo della lezione">
                    <option disabled selected>Seleziona un esame</option>
                </select>
            </div>

            <div class="mt-3">
                <label id="lblLezione" class="form-label">Titolo</label>
                <input type="text" class="form-control" asp-for="Titolo" placeholder="Inserisci il titolo della lezione" />
            </div>

            <div class="mt-3">
                <label id="lblVideo" class="form-label">Video</label>
                <input type="text" class="form-control" asp-for="Video" placeholder="Inserisci il link del video" />
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg w-100">Salva</button>
            </div>
        </form>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Operazione non riuscita',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }
    }
</div>
