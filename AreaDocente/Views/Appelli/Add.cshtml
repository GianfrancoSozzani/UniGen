@model AreaDocente.Models.AddAppelliViewModel

<div class="container my-5">
    <h1 class="mb-4">Inserimento Appello</h1>

    <div class="card shadow-sm p-4">
        <form method="post" class="needs-validation" novalidate>

            <div class="mb-3">
                <label class="form-label fw-semibold">Esame di appartenenza</label>
                <select asp-for="K_Esame" asp-items="@ViewBag.EsamiDDL" class="form-select" required>
                    <option disabled selected value="">== Seleziona un esame ==</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Data Appello</label>
                <input type="date" class="form-control" id="DataAppello" asp-for="DataAppello" name="DataAppello" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Tipo Appello</label>
                <select asp-for="Tipo" class="form-select" id="TipoAppello" required>
                    <option disabled selected>== Seleziona il tipo dell'appello ==</option>
                    <option value="Or">Orale</option>
                    <option value="Sc">Scritto</option>
                    <option value="La">Laurea</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Link Appello</label>
                <input type="text" class="form-control" asp-for="Link" placeholder="Inserisci il link dell'appello" required />
            </div>

            <div class="mb-3" id="DataOraleDiv" style="display: none;">
                <label class="form-label fw-semibold">Data Orale</label>
                <input type="datetime-local" class="form-control" id="DataOrale" asp-for="DataOrale" name="DataOrale" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success btn-lg w-100">
                    <i class="bi bi-save me-1"></i> Salva
                </button>
            </div>

        </form>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Operazione non riuscita',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }

        <script>
            // Gestisce la visibilità dei campi Link e Data Orale in base al tipo selezionato
            document.getElementById("TipoAppello").addEventListener("change", function () {
                var tipoSelezionato = this.value;

                // Se "Orale", mostra i campi Link e Data Orale
                if (tipoSelezionato === "Or") {
                    document.getElementById("DataOraleDiv").style.display = "block";
                }
                // Altrimenti nascondi
                else {
                    document.getElementById("DataOraleDiv").style.display = "none";
                }
            });

            // Esegui subito il controllo quando la pagina è caricata, per il caso in cui il valore sia già impostato su "Orale"
            window.addEventListener("load", function () {
                var tipoSelezionato = document.getElementById("TipoAppello").value;
                if (tipoSelezionato === "Or") {
                    document.getElementById("DataOraleDiv").style.display = "block";
                }
            });
        </script>
    }
</div>
