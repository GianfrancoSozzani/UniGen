@model AreaDocente.Models.EditMaterialiViewModel

<h1>Modifica Materiali</h1>

<form method="post" enctype ="multipart/form-data">

	<div class="mt-3 d-none">
		<label class="form-label">K_Materiale</label>
		<input type="text" class="form-control" asp-for="K_Materiale" readonly />
	</div>

	<div class="mt-3" >
		<label class="form-label">Titolo</label>
		<input type="text" class="form-control" asp-for="Titolo" />
	</div>
	<div class="form-group">
		<label>Nuovo file</label>
		<input type="file" id="file" name="MaterialeDA" class="form-control" asp-for="MaterialeDA" />
	</div>
	<div class="mt-3">
		<label class="form-label">Esame</label>
		<select asp-for="K_Esame" asp-items="@ViewBag.EsameList" class="form-select">
			<option disabled selected>== Selezionare una facoltà ==</option>
		</select>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Modifica</button>
		@* <button type="submit" class="btn btn-danger ms-3" asp-controller="Students" asp-action="Delete">Elimina</button> *@
	</div>

</form>
