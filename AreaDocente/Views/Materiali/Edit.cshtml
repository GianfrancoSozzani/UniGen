@model AreaDocente.Models.Entities.MVCMateriali

<div class="container">
    <h1>Modifica Materiali</h1>

    <form>
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="K_Materiale" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Facoltà</label>
            <select asp-for="K_Esame" asp-items="@ViewBag.EsameList" class="form-select">
                <option disabled selected>==Selezionare una facoltà</option>
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Cognome</label>
            <input type="text" class="form-control" asp-for="Titolo" readonly />
        </div>
        <div class="form-group">
            <label>Nuovo file (opzionale)</label>
            <input type="file" name="file" class="form-control" />
        </div>
        <div class="mt-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Tipo" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Modifica</button>
            <button type="submit" class="btn btn-danger ms-3" asp-controller="Students" asp-action="Delete">Elimina</button>
        </div>

    </form>
</div>