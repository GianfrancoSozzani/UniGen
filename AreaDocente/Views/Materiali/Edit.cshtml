@model AreaDocente.Models.EditMaterialiViewModel

<div class="container my-5">

    <h1>Modifica Materiali</h1>

    @if (Model is null)
    {
        <div class="alert alert-warning text-center" role="alert">
            Nessun record trovato con questo ID.
        </div>
    }
    else
    {
        <div class="card p-4 shadow-sm">
            <form method="post" enctype="multipart/form-data">

                <div class="mt-3 d-none">
                    <label class="form-label">K_Materiale</label>
                    <input type="text" class="form-control" asp-for="K_Materiale" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label">Titolo</label>
                    <input type="text" class="form-control" asp-for="Titolo" />
                </div>

                <div class="mt-3">
                    <label>Nuovo file</label>
                    <input type="file" id="file" name="MaterialeDA" class="form-control" asp-for="MaterialeDA" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Esame</label>
                    <select asp-for="K_Esame" asp-items="@ViewBag.EsameList" class="form-select">
                        <option disabled selected>== Selezionare una facoltà ==</option>
                    </select>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-pencil-square me-1"></i> Modifica
                    </button>
                    <button type="submit" class="btn btn-danger btn-lg" asp-controller="Materiali" asp-action="Delete">
                        <i class="bi bi-trash me-1"></i> Elimina
                    </button> 
                    <button type="submit" class="btn btn-secondary btn-lg" asp-controller="Materiali" asp-action="Annulla">
                        <i class="bi bi-arrow-90deg-left me-1"></i> Annulla
                    </button>
                </div>

            </form>
        </div>
    }

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Operazione non riuscita',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }
    }
</div>
