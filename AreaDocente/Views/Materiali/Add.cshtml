@model AreaDocente.Models.AddMaterialiViewModel

<div class="container my-5">
    <h1 class="mb-4">Inserimento Materiale</h1>

    <div class="card shadow-sm p-4">
        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

            <div class="mb-3">
                <label class="form-label fw-semibold">Titolo</label>
                <input type="text" class="form-control" asp-for="Titolo" placeholder="Inserisci il titolo del materiale" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold" for="file">File</label>
                <input type="file" id="file" name="materiale" class="form-control" asp-for="materiale" required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Esame di appartenenza</label>
                <select asp-for="K_Esame" asp-items="@ViewBag.EsameList" class="form-select" required>
                    <option disabled selected value="">== Selezionare un esame ==</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="bi bi-save me-1"></i> Salva
            </button>

        </form>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        @if (TempData["ErrorMessage"] != null)
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Operazione non riuscita',
                    text: '@TempData["ErrorMessage"]'
                });
            </script>
        }
    }
</div>
